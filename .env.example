# Sakti-Link Edge Server Configuration

# Application
DEBUG=False
PORT=8000

# Database
DATABASE_PATH=data/sakti_link.db
DATABASE_KEY=change-this-encryption-key-in-production

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# AI Models
MODELS_DIR=models
WHISPER_MODEL=openai/whisper-small
LLAMA_MODEL=TheBloke/Llama-2-7B-Chat-GGUF
LLAMA_MODEL_FILE=llama-2-7b-chat.Q4_K_M.gguf

# Bhashini API (for Indian language STT/TTS)
BHASHINI_API_KEY=your-bhashini-api-key
BHASHINI_API_URL=https://api.bhashini.gov.in/v1

# Languages (comma-separated language codes)
SUPPORTED_LANGUAGES=hi,bn,ta,te,mr,gu,kn,ml,pa,or
DEFAULT_LANGUAGE=hi

# Offline Mode
OFFLINE_MODE=True
SYNC_INTERVAL=3600

# Cloud Sync (Optional)
CLOUD_API_URL=https://your-cloud-api.com
CLOUD_API_KEY=your-cloud-api-key
ENABLE_CLOUD_SYNC=False

# Privacy
ANONYMIZE_USER_DATA=True
LOCAL_PROCESSING_ONLY=True
DATA_RETENTION_DAYS=90

# Learning Credits
LEARNING_CREDIT_INITIAL=10
LEARNING_CREDIT_PER_TEACH=5
LEARNING_CREDIT_PER_LEARN=-3

# Security
SECRET_KEY=change-this-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/edge_server.log
